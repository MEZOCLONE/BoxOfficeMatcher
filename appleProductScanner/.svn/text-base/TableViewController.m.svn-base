#import "TableViewController.h"
#import "MainViewController.h"
#import "MovieInfo.h"
#import "MovieCell.h"
#import "DLStarRatingControl.h"

@interface TableViewController ()

@end

@implementation TableViewController
@synthesize _moviesArray;

- (void)viewDidLoad
{
    [super viewDidLoad];
    
    _moviesArray = [[NSArray alloc] init];
    
}

-(id)myInit
{
    [self.tableView setDelegate:self];
    [self.tableView setDataSource:self];
    
    self.tableView.opaque = FALSE;
    
    return self;
}

- (void)viewDidUnload
{
    [super viewDidUnload];
    // Release any retained subviews of the main view.
    // e.g. self.myOutlet = nil;
}

- (BOOL)shouldAutorotateToInterfaceOrientation:(UIInterfaceOrientation)interfaceOrientation
{
    return (interfaceOrientation == UIInterfaceOrientationPortrait);
}

#pragma mark - Table view data source

- (NSInteger)numberOfSectionsInTableView:(UITableView *)tableView
{
    return 1;
}

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    // Return the number of rows in the section.
    return [_moviesArray count];
}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    static NSString *CellIdentifier = @"Cell";
    MovieCell *cell = [tableView dequeueReusableCellWithIdentifier:CellIdentifier];
    if (cell == nil) {
        cell = [[MovieCell alloc] initWithStyle:UITableViewCellStyleDefault reuseIdentifier:CellIdentifier];
    }
    
    // Configure the cell...
    Movie *mov = [_moviesArray objectAtIndex:indexPath.row];
    NSDictionary* dic = mov.movieInfo;
    [cell.textLabel setText:[dic objectForKey:@"name"]];
    if(UI_USER_INTERFACE_IDIOM() == UIUserInterfaceIdiomPhone){
        [cell.textLabel setFont:[UIFont boldSystemFontOfSize:SizeTitle_iPhone]];
    }else{ 
        [cell.textLabel setFont:[UIFont boldSystemFontOfSize:SizeTitle_iPad]];
    }
    
    [cell.imageView setImage:mov.posterImage];
    
    
    [cell setRating:((NSString*)[mov.movieInfo objectForKey:@"rating"]).intValue];
    
    return cell;
}

#pragma mark - Table view delegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    indice = indexPath.row;
    [self.tableView deselectRowAtIndexPath:indexPath animated:YES];
    [[NSNotificationCenter defaultCenter] postNotificationName:@"ShowInfoMovie" object:[[NSNumber alloc] initWithInt:indexPath.row]];
}

- (CGFloat)tableView:(UITableView *)tableView heightForRowAtIndexPath:(NSIndexPath *)indexPath {
    if(UI_USER_INTERFACE_IDIOM() == UIUserInterfaceIdiomPhone)
        return ROW_iPhone;
    else 
        return ROW_iPad;
}

@end
